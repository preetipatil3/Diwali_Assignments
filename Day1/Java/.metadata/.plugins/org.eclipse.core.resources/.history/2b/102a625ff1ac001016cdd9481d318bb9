package com.demo.service;

public class Student{
	//encapsulation
	private int rollno;//0
	private String sname;//null
	private String course;
	private double attendance_percentage;
	private double score;
	
	public Student() {
		System.out.println("Student Default constructor");
	}
	
	public Student(int rolno,String sname,String course,double attendance_percentage,double score)throws LowAttendanceException{
		System.out.println("Student Paramterised constructor");
		this.rollno=rolno;
		this.sname=sname;
		this.course=course;
		this.attendance_percentage=attendance_percentage;
		this.score=score;
		//3.throw user defined exception
		if(attendance_percentage<=60) {
			throw new LowAttendanceException("Attendance below 60% for Student "+sname);
		}
	}

	public int getRollno() {
		return rollno;
	}

	public void setRollno(int rollno) {
		this.rollno = rollno;
	}

	public String getSname() {
		return sname;
	}

	public void setSname(String sname) {
		this.sname = sname;
	}

	public String getCourse() {
		return course;
	}

	public void setCourse(String course) {
		this.course = course;
	}

	public double getAttendance_percentage() {
		return attendance_percentage;
	}

	public void setAttendance_percentage(double attendance_percentage) {
		this.attendance_percentage = attendance_percentage;
	}

	public double getScore() {
		return score;
	}

	public void setScore(double score) {
		this.score = score;
	}
	
	//1.calculateGrade
	public String calculateGrade() {
		if(score>=90) {
			return "A+";
		}else if(score>=80) {
			return "A";
		}else if(score>=70) {
			return "B";
		}else if(score>=60) {
			return "C";
		}else {
			return "D";
		}
		
	}

	@Override
	public String toString() {
		return "Student [rollno=" + rollno + ", sname=" + sname + ", course=" + course
				+ ", attendance_percentage=" + attendance_percentage + ", score=" + score + "]";
	}
	
	

}
